<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/historyItemSnap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/map_on" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" 
        android:paddingTop="10dp"
        android:gravity="left">

        <TextView
            android:id="@+id/historyItemStart"
            style="@style/RunLightDefaultTextfieldBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="24.12.1954 08:56:21"
            android:textAppearance="@style/RunLightDefaultTextfieldBold"
            android:textSize="18sp" 
            android:textColor="#bbbbbb"/>

        <TextView
            android:id="@+id/historyItemDistance"
            style="@style/RunLightDefaultTextfieldNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="122"
            android:textAppearance="@style/RunLightDefaultTextfieldNormal"
            android:textSize="18sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/historyItemDuration"
            style="@style/RunLightDefaultTextfieldNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="122"
            android:textAppearance="@style/RunLightDefaultTextfieldNormal"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/historyItemAvgSpeed"
            style="@style/RunLightDefaultTextfieldNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.6"
            android:textAppearance="@style/RunLightDefaultTextfieldNormal"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>